<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_item"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="@dimen/margin_medium"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <FrameLayout
        android:id="@+id/cardview_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/label_item"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            tools:text="LABEL"
            android:background="#90CDCDCD"
            android:layout_gravity="bottom"
            android:alpha="@integer/material_motion_duration_medium_1"
            />

        <ImageButton
            android:id="@+id/delete_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/extra_small"
            android:background="@drawable/cross"
            android:contentDescription="@string/delete_icon" />

        <ImageButton
            android:id="@+id/label_create"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_extra_medium_medium"
            android:layout_marginEnd="@dimen/extra_small"
            android:background="@drawable/stylo"
            android:contentDescription="@string/pencil_icon" />

    </FrameLayout>


</androidx.cardview.widget.CardView>



